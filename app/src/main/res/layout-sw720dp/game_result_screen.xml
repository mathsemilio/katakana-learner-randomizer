<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_game_result_screen_1_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_game_result_screen_2_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_animation_view_result_screen"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="62dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/guideline_game_result_screen_2_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_game_result_screen_1_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/japan_flow" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_headline_you_are_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_8dp"
        android:text="@string/you_made_it"
        android:textAppearance="@style/TextAppearance.App.GameResultScreen.YouMadeIt.xLarge"
        app:layout_constraintEnd_toStartOf="@+id/guideline_game_result_screen_2_vertical"
        app:layout_constraintStart_toStartOf="@+id/guideline_game_result_screen_1_vertical"
        app:layout_constraintTop_toBottomOf="@+id/lottie_animation_view_result_screen" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/text_headline_you_got_correctly"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_8dp"
        android:layout_marginEnd="@dimen/margin_32dp"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.App.GameResultScreen.YouGotSymbols.xLarge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_headline_you_are_done"
        tools:text="You got 30 symbols correctly!" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_view_game_result"
        style="@style/Widget.App.CardView.GameResult"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_32dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:layout_marginEnd="@dimen/margin_32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_headline_you_got_correctly">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/padding_8dp">

            <View
                android:id="@+id/list_divider_card_view_game_result"
                android:layout_width="0.8dp"
                android:layout_height="0dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintBottom_toBottomOf="@id/text_headline_game_difficulty_score_screen"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/text_body_game_difficulty_score_screen" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_body_game_difficulty_score_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_4dp"
                android:maxLines="2"
                android:text="@string/game_difficulty_score_screen"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintEnd_toStartOf="@id/list_divider_card_view_game_result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_headline_game_difficulty_score_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/list_divider_card_view_game_result"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_body_game_difficulty_score_screen"
                tools:text="Hard" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_body_perfect_score_score_screen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_4dp"
                android:layout_marginTop="@dimen/margin_8dp"
                android:layout_marginEnd="@dimen/margin_4dp"
                android:maxLines="2"
                android:text="@string/perfect_scores_score_screen"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/list_divider_card_view_game_result"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text_headline_perfect_scores_number_score_screen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_4dp"
                android:layout_marginBottom="@dimen/margin_8dp"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/list_divider_card_view_game_result"
                app:layout_constraintTop_toBottomOf="@id/text_body_perfect_score_score_screen"
                tools:text="6" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_home"
        style="@style/Widget.App.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:contentDescription="@string/content_description_button_home"
        android:src="@drawable/ic_outline_home_24"
        app:layout_constraintBottom_toTopOf="@id/adview_game_result_screen"
        app:layout_constraintEnd_toStartOf="@id/fab_play_again"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_view_game_result"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_play_again"
        style="@style/Widget.App.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:contentDescription="@string/content_description_button_play_again"
        android:src="@drawable/ic_baseline_refresh_24"
        app:layout_constraintBottom_toTopOf="@id/adview_game_result_screen"
        app:layout_constraintEnd_toStartOf="@id/fab_share"
        app:layout_constraintStart_toEndOf="@id/fab_home"
        app:layout_constraintTop_toBottomOf="@id/card_view_game_result"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_share"
        style="@style/Widget.App.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_32dp"
        android:contentDescription="@string/content_description_button_share"
        android:src="@drawable/ic_outline_share_24"
        app:layout_constraintBottom_toTopOf="@id/adview_game_result_screen"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fab_play_again"
        app:layout_constraintTop_toBottomOf="@id/card_view_game_result"
        app:layout_constraintVertical_bias="0.0" />

    <com.google.android.gms.ads.AdView
        android:id="@+id/adview_game_result_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="FULL_BANNER"
        app:adUnitId="@string/bannerAdTestUnitId"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>