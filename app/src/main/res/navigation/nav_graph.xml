<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gameWelcomeScreen">

    <fragment
        android:id="@+id/gameWelcomeScreen"
        android:name="com.mathsemilio.katakanalearner.ui.screens.welcome.GameWelcomeScreen"
        tools:layout="@layout/game_welcome_screen">

        <action
            android:id="@+id/action_gameWelcomeScreen_to_gameMainScreen"
            app:destination="@id/mainGameScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/action_gameWelcomeScreen_to_settingsFragment"
            app:destination="@id/settingsFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />

    </fragment>

    <fragment
        android:id="@+id/mainGameScreen"
        android:name="com.mathsemilio.katakanalearner.ui.screens.main.MainGameScreen"
        tools:layout="@layout/main_game_screen">

        <action
            android:id="@+id/action_gameMainScreen_to_gameScoreScreen"
            app:destination="@id/gameScoreScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left" />

        <action
            android:id="@+id/action_gameMainScreen_to_gameWelcomeScreen"
            app:destination="@id/gameWelcomeScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/gameWelcomeScreen" />

        <argument
            android:name="difficulty_value"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/gameScoreScreen"
        android:name="com.mathsemilio.katakanalearner.ui.screens.score.GameScoreScreen"
        tools:layout="@layout/game_score_screen">

        <action
            android:id="@+id/action_gameScoreScreen_to_gameWelcomeScreen"
            app:destination="@id/gameWelcomeScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/gameWelcomeScreen"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_gameScoreScreen_to_mainGameScreen"
            app:destination="@id/mainGameScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpToInclusive="true" />

        <argument
            android:name="score"
            android:defaultValue="0"
            app:argType="integer" />

        <argument
            android:name="difficulty_value"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mathsemilio.katakanalearner.ui.screens.settings.SettingsFragment"
        android:label="@string/settings_toolbar_title">

        <action
            android:id="@+id/action_settingsFragment_to_gameWelcomeScreen"
            app:destination="@id/gameWelcomeScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_left"
            app:popUpTo="@id/gameWelcomeScreen"
            app:popUpToInclusive="true" />

    </fragment>

</navigation>