<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/gameWelcomeScreen">

    <fragment
        android:id="@+id/gameWelcomeScreen"
        android:name="com.mathsemilio.katakanalearner.ui.fragment.GameWelcomeScreen"
        tools:layout="@layout/game_welcome_screen">

        <action
            android:id="@+id/action_gameWelcomeScreen_to_mainGameScreen"
            app:destination="@id/mainGameScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/mainGameScreen"
        android:name="com.mathsemilio.katakanalearner.ui.fragment.MainGameScreen"
        tools:layout="@layout/main_game_screen">

        <action
            android:id="@+id/action_mainGameScreen_to_gameWelcomeScreen"
            app:destination="@id/gameWelcomeScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/gameWelcomeScreen" />

        <action
            android:id="@+id/action_mainGameScreen_to_gameScoreScreen"
            app:destination="@id/gameScoreScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />

    </fragment>

    <fragment
        android:id="@+id/gameScoreScreen"
        android:name="com.mathsemilio.katakanalearner.ui.fragment.GameScoreScreen"
        tools:layout="@layout/game_score_screen">

        <action
            android:id="@+id/action_gameScoreScreen_to_gameWelcomeScreen"
            app:destination="@id/gameWelcomeScreen"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim"
            app:popUpTo="@id/gameWelcomeScreen"
            app:popUpToInclusive="true" />

        <argument
            android:name="game_score"
            android:defaultValue="0"
            app:argType="integer" />

    </fragment>

</navigation>